
body
    for obj in JSON.parse(results)
        if(!!obj.docs)
            div#outside
                br
                div#header
                    h1 Our Suggestions
                    br
                    button(onClick="backToSurvey()") Retake Survey
                for doc in obj.docs
                    div#main
                        h1 #{doc.original_title}
                        - var path = "http://image.tmdb.org/t/p/w500/" + doc.backdrop_path
                        img(src=path)
                        br
                        h4 Genre:
                        p #{doc["genres.name"]}
                        h4 Popularity Score:
                        p #{doc.popularity}/10
                        h4 Overview:
                        p #{doc.overview}
                        - var imdbPage = "http://imdb.com/title/" + doc.imdb_id
                        h4 More Information:
                        a(href=imdbPage) Imdb Link
                        

style.
    #outside {
        background-image: url('https://timewellness.files.wordpress.com/2012/03/126551164popcorncrop.jpg?w=600&h=412&crop=1');
        text-align: center;
    }

    #main {
        background-color: rgba(255, 255, 255, 0.87);
        margin-left: 500px;
        margin-right: 500px;
    }

    #header {
        background-color: rgba(255, 255, 255, 1.0);
        width: 350px;
        margin: auto;
    }

script.
    function backToSurvey()  {
        window.location.href="/survey";
    }